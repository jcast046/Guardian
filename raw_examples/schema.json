{
  "type": "object",
  "required": [
    "case_id","timezone","datetime_last_seen",
    "last_seen_lat","last_seen_lng","last_seen_state","status"
  ],
  "properties": {
    "case_id": {"type":"string","pattern":"^GRD-\\d{4}-\\d{6}$"},
    "name_full": {"type":"string"},
    "aliases": {"type":"array","items":{"type":"string"}},
    "age_years": {"type":"number","minimum":0,"maximum":18},
    "gender": {"type":"string","enum":["female","male","unknown"]},
    "race_ethnicity": {"type":"string"},
    "height_cm": {"type":"number"},
    "weight_kg": {"type":"number"},
    "distinctive_features": {"type":"string"},
    "last_seen_address": {"type":"string"},
    "last_seen_city": {"type":"string"},
    "last_seen_county": {"type":"string"},
    "last_seen_state": {"type":"string","enum":["VA"]},
    "last_seen_postal_code": {"type":"string","pattern":"^\\d{5}(-\\d{4})?$"},
    "last_seen_lat": {"type":"number","minimum":-90,"maximum":90},
    "last_seen_lng": {"type":"number","minimum":-180,"maximum":180},
    "nearby_roads": {"type":"array","items":{"type":"string"}},
    "nearby_transit_hubs": {"type":"array","items":{"type":"string"}},
    "nearby_POIs": {"type":"array","items":{"type":"string"}},
    "timezone": {"type":"string","pattern":"^[A-Za-z_]+\\/[A-Za-z_]+$"},
    "datetime_last_seen": {"type":"string","format":"date-time"},
    "datetime_reported_missing": {"type":"string","format":"date-time"},
    "datetime_first_response": {"type":"string","format":"date-time"},
    "elapsed_report_minutes": {"type":"integer"},
    "elapsed_first_response_minutes": {"type":"integer"},
    "status": {"type":"string","enum":["missing","recovered","deceased","unknown"]},
    "datetime_recovered": {"type":["string","null"],"format":"date-time"},
    "recovered_city": {"type":["string","null"]},
    "recovered_state": {"type":["string","null"],"enum":["VA",null]},
    "recovered_lat": {"type":["number","null"]},
    "recovered_lng": {"type":["number","null"]},
    "recovery_distance_km": {"type":["number","null"]},
    "recovery_time_hours": {"type":["number","null"]},
    "case_type": {"type":"string","enum":["runaway","custody_dispute","non_family_abduction","lost","unknown"]},
    "movement_cues_text": {"type":"string"},
    "movement_cues_struct": {"type":"array","items":{"type":"string"}},
    "risk_factors": {"type":"array","items":{"type":"string"}},
    "companions_or_suspects": {
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "role":{"type":"string","enum":["suspect","companion","family","unknown"]},
          "age_estimate":{"type":["number","null"]},
          "vehicle":{
            "type":["object","null"],
            "properties":{
              "make":{"type":"string"},
              "model":{"type":"string"},
              "color":{"type":"string"},
              "plate_partial":{"type":"string"}
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "event_sequence": {
      "type":"array",
      "items":{
        "type":"object",
        "required":["t","lat","lng","event_type"],
        "properties":{
          "t":{"type":"string","format":"date-time"},
          "lat":{"type":"number","minimum":-90,"maximum":90},
          "lng":{"type":"number","minimum":-180,"maximum":180},
          "event_type":{"type":"string","enum":["sighting","lead","camera_hit","lpr_hit","transit_tap","cell_ping","search_action"]},
          "confidence":{"type":"number","minimum":0,"maximum":1},
          "note":{"type":"string"}
        },
        "additionalProperties": false
      }
    },
    "sighting_reports": {
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "t":{"type":"string","format":"date-time"},
          "lat":{"type":"number"},
          "lng":{"type":"number"},
          "reporter_type":{"type":"string","enum":["public","officer","family"]},
          "description":{"type":"string"},
          "confidence":{"type":"number","minimum":0,"maximum":1}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
